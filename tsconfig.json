{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@constansts/*": ["./src/constants/*"],
      "@shared/*": ["./src/modules/shared/*"],
      "@assets/*": ["./src/assets/*"],
      "@colors/*": ["./src/config/*"],
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
